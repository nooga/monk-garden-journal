---
import { fetchEntries } from '../utils/netlifyBlob.ts';

const entries = await fetchEntries();

---

<ul class="space-y-4">
  {entries.sort((a, b) => new Date(b.date) - new Date(a.date)).map(entry => (
    <li key={entry.id} class="p-4 border rounded shadow">
      <h2 class="text-xl font-bold">{entry.title}</h2>
      <p class="text-gray-700">{entry.content}</p>
      {entry.image && <img src={entry.image} alt={entry.title} class="mt-2 rounded" />}
      <p class="text-sm text-gray-500">{new Date(entry.date).toLocaleDateString()}</p>
    </li>
  ))}
</ul>